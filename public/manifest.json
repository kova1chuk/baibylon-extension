{
  "manifest_version": 3,
  "name": "Baibylon",
  "version": "0.0.1",
  "description": "A Chrome extension for Baibylon",
  "permissions": ["activeTab", "storage", "contextMenus", "identity", "tabs"],
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Baibylon"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
